
<div class="container" />
	<div class="row">
		<div class="col-md-7">

			<%= image_tag @portfolio_item.main_image %>
			
		</div>
		<div class="col-md-5">
	
			<h1><%= @portfolio_item.title %> </h1>
			<h2><%= @portfolio_item.subtitle %> </h2>
	
			<p><%= @portfolio_item.body %> </p>

			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %> </p>
				<%end %>

			<% if logged_in?(:admin) %>
				<p><%= link_to "Edit", edit_porto_path(@portfolio_item.id) %></p>
				<p><%= link_to "Delete", porto_path, method: :delete, data: { confirm: 'Delete Portfolio Item?'}%></p>
			<% end %>

		</div>
		<hr>
		<p><%= link_to 'View all Portfolio Items', porto_path %></p>
	</div>
</div>
