<%= form_for(@portfolio_item) do |form| %>
	
		  <div class="form-group">
		    <%= form.label :title %>
		    <%= form.text_field :title, id: :blog_title , class: 'form-control'%>
		  </div>

		  <div class="form-group">
		    <%= form.label :subtitle %>
		    <%= form.text_field :subtitle, id: :blog_title, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		    <%= form.label :body %>
		    <%= form.text_area :body, id: :blog_body, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		  	<%= form.file_field :main_image %>
		  </div>

		  <div class="form-group">
		  	<%= form.file_field :thumb_image %>
		  </div>

		  <ul>
		  	<%= form.fields_for :technologies do |tech_form| %>
		  		<div class="form-group">
		  			<li> <%= tech_form.label :name %> </li>
		  			<li> <%= tech_form.text_field :name %> </li>
		  		</div>
		  	<% end %>
		  
		  </ul>

		  <div class="actions">
		    <%= form.submit "submit", class: 'btn btn-primary btn-block' %>
		  </div>
<% end %>