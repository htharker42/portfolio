<%= form_for(@portfolio_item) do |form| %>
		<% if portfolio_item.errors.any? %>
    	 	<% portfolio_item.errors.full_messages.each do |error| %>
        		<%= alert_generator error %>
      		<% end %>
  		<% end %>
	
		  <div class="form-group">
		    <%= form.label :title %>
		    <%= form.text_field :title, id: :blog_title , class: 'form-control'%>
		  </div>

		  <div class="form-group">
		    <%= form.label :subtitle %>
		    <%= form.text_field :subtitle, id: :blog_title, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		    <%= form.label :body %>
		    <%= form.text_area :body, id: :blog_body, class: 'form-control' %>
		  </div>

		  <div class="form-group">
		  	<label class="btn btn-primary btn-block">
		  		Upload main image file <%= form.file_field :main_image, style: 'display:none;' %>
		  	</label>
		  </div>

		  <div class="form-group">
		  	<label class="btn btn-primary btn-block">
		  		Upload thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
		  	</label>
		  </div>

		 <div class="col-md-6">
		  	<%= form.fields_for :technologies do |tech_form| %>
		  		<%= render 'technology_fields', f: tech_form %>
		  		<% end %>
		  </div>
		  	
		  	<div class= "col-md-6">
		  		<%= link_to_add_association "Add Technology", form, :technologies, class: "btn btn-success btn-block" %>
		  	</div>
		 	<hr>

		  <div class="actions">
		    <%= form.submit "submit", class: 'btn btn-primary btn-block' %>
		  </div>
<% end %>