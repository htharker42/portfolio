  </head>

  
  <body class="text-center">
      <div class="inner">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
          
             <%= render "shared/application_nav" %>

            <%= login_helper %>

          	<!-- <p class="notice"><%= notice %></p>
          	<p class="alert"><%= alert %></p> -->
            
            <%= yield %>
            
            <%= source_helper("application") %>

            <%= copyright_generator %>

          </div>
        </div>
  </body>


</html>
