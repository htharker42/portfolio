<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="keywords" content=<%= @seo_keywords %> />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <div> <%= link_to "Home", root_path %> </div>
      <div> <%= link_to "About Me", about_me_path %> </div>
      <div> <%= link_to "Blog", blogs_path %> </div>
      <div> <%= link_to "Portfolio", portos_path %> </div>
      <div> <%= link_to "Contact", contact_path %> </div>
    </div>

    <% if current_user.is_a?(User) %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete%>
    <% else %>
    <%= link_to "Regester", new_user_registration_path %>
    <%= link_to "Login", new_user_session_path %> 
    <% end %>
  	<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>
    
    <%= yield %>
    
    <% if session[:source] %>
      <p> Thanks for visiting from <%= session[:source] %> </p>
    <% end %>

  </body>
</html>
