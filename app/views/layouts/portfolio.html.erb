
<!DOCTYPE html>
<html>
  <head>
  	<%= favicon_link_tag 'hth-icon.ico' %>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content=<%= @seo_keywords %> />
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Raleway" rel="stylesheet">

    <%= stylesheet_link_tag 'portos', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 
  <body>
    <%= render 'shared/portfolio_nav' %>

    <%= render 'shared/portfolio_masthead' unless logged_in?(:admin) %>
    
    <%= yield %>
    
    <%= render 'shared/portfolio_footer' %>
    
    <%= alerts %>

  </body>
</html>
