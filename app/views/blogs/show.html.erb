
<div class="row">
        <div class="col-md-8 blog-main">
         
           <div class="blog-post">
           	<strong> 
           		<h2 class="blog-post-title">
           			<%= @blog.title %>
           		</h2> 
           	</strong>

           	<p> <%= @blog.topic.title %> </p>
           	<p class="blog-post-meta"> Published <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</p>

           	<nav aria-label="breadcrumb" class="breadcrumb">
           	    <%= link_to "Home", root_path, class: "breadcrumb-item" %> 
           	    <%= link_to "Blogs", blogs_path, class: "breadcrumb-item" %> <%= link_to @blog.topic.title, topic_path(@blog.topic.id), class: "breadcrumb-item" %> 
           	    <span class="breadcrumb-item active" aria-current="page">
           	    	<%= @blog.title %> </span>

           	</nav>

           	<span class="pull-right">
           		<% if logged_in?(:admin) %>
           		<%=link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) %> 
           		<span> | </span>
           		<%= link_to fa_icon('trash'), blog_path(@blog), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } if logged_in?(:admin) %>
           		<span> | </span>
           		<% if @blog.status == 'published' %> 
           			<%=link_to fa_icon('check'),toggle_status_blog_path(@blog) %> 
           		<% else %>
           		<%=link_to fa_icon('times-circle'),toggle_status_blog_path(@blog) %>
           			<% end %>

           		<%end%>
           	</span>

           	<p><%= markdown(@blog.body) %></p>

           	<%= link_to 'Back', blogs_path %> 

           	<% if logged_in?(:admin) %>
           		<%= link_to @blog.status, toggle_status_blog_path(@blog) if logged_in?(:admin) %> 

           	<% end %>
          </div>

            <%= render "comments/comment_form" %>


          <div id="comments" data-blog-id="<%= @blog.id %>">
            <%= render @blog.comments %>
          </div>

        
        </div>
  
        <%= render 'shared/blog_sidebar' %>
</div>



