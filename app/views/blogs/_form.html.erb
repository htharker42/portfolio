<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
      <% blog.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :blog_title,  class: 'form-control', placeholder: 'Title' %>
  </div>

    <p> <%= blog.topic_id %> </p> 
    <div class="form-group">
    <%= form.text_field :topic_id, id: :topic_id,  class: 'form-control', placeholder: 'Topics' %>
  </div> 

  <div class="form-group">
    <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Publish', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>


